{
    "app":{
		"cfengine":"boxlang@be",
        "serverHomeDirectory":".engine/boxlang"
    },
    "name":"contentbox-boxlang",
    "JVM":{
		"javaVersion":"openjdk21_jre",
        "heapSize":"1024",
        "args":"-Dcom.sun.net.ssl.enableECC=false -agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=9999"
    },
    "web":{
        "directoryBrowsing":true,
        "rewrites":{
            "enable":true
        },
        "http":{
            "port":"8589"
        }
    },
    "trayicon":"modules_app/contentbox-custom/_content/ContentBoxIcon300.png",
    "trayOptions":[
        {
            "label":"Open ContentBox Admin",
            "action":"openbrowser",
            "url":"/cbadmin",
            "disabled":false,
            "image":"modules_app/contentbox-custom/_content/ContentBoxIcon300.png"
        }
    ],
    "cfconfig":{
        "file":".cfconfig.json"
    },
	"env":{
        "BOXLANG_DEBUG":true
    },
    "scripts":{
        "onServerInitialInstall":"install bx-mail,bx-pdf,bx-mysql,bx-oracle,bx-postgresql,bx-compat-cfml,bx-esapi,bx-orm --noSave"
    }
}
